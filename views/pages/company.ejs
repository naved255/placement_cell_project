<% layout('/layouts/boilerplate.ejs') -%>

<body class="bg-gray-50 min-h-screen py-10 px-6">
  <div class="max-w-7xl mx-auto">
    <!-- Page Header -->
    <h1 class="text-3xl font-bold text-gray-800 text-center mb-10">Registered Companies</h1>

    <!-- Company Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      <% companies.forEach(company => { %>
        <div class="bg-white rounded-2xl shadow-md hover:shadow-lg transition p-6 flex flex-col">
          <!-- Logo Placeholder -->
          <div class="w-20 h-20 mx-auto rounded-full bg-gradient-to-tr from-indigo-500 to-purple-500 flex items-center justify-center text-white text-2xl font-semibold">
            <%= company.name[0] %>
          </div>

          <!-- Company Info -->
          <div class="text-center mt-4 flex-1">
            <h2 class="text-xl font-semibold text-gray-800"><%= company.name %></h2>
            <p class="text-gray-500"><%= company.industry_type %></p>
            <p class="text-sm text-gray-400 mt-1"><%= company.location %></p>
          </div>

          <!-- Contact Info -->
          <div class="mt-4 text-sm text-gray-700 border-t pt-3">
            <p><span class="font-medium">Contact:</span> <%= company.contact_person %></p>
            <p><span class="font-medium">Email:</span> <%= company.email %></p>
          </div>

          <!-- Actions -->
          <div class="mt-6 flex justify-center gap-3">
            <a href="<%= company.website %>" target="_blank"
               class="px-4 py-2 bg-indigo-600 text-white text-sm rounded-xl hover:bg-indigo-700 transition">
              Visit Website
            </a>
            <a href="/company/<%= company.company_id %>"
               class="px-4 py-2 bg-gray-100 text-gray-800 text-sm rounded-xl hover:bg-gray-200 transition">
              View Details
            </a>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
